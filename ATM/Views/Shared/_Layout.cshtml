<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="@Url.Action("Index","Home")"><span>Automated</span>teller-machine</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#"><span>Services</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="@Url.Action("Details","CheckingAccount")">Check Balance</a></li>
                            @*<li><a href="@Url.Action("Deposit","Transactions", new { checkingAccountId = ViewBag.CheckingAccountId})"> Deposit Funds</a></li>
                            <li><a href="@Url.Action("Withdraw","Transactions", new { checkingAccountId = ViewBag.CheckingAccountId})">Withdraw Funds</a></li>
                            <li><a href="@Url.Action("Transfer","Transactions", new { checkingAccountId = ViewBag.CheckingAccountId})">Transfer funds</a></li>*@
                            @*<li class="dropdown">
                                <a href="#"><span>Deep Drop Down</span> <i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="#">Deep Drop Down 1</a></li>
                                    <li><a href="#">Deep Drop Down 2</a></li>
                                    <li><a href="#">Deep Drop Down 3</a></li>
                                    <li><a href="#">Deep Drop Down 4</a></li>
                                    <li><a href="#">Deep Drop Down 5</a></li>
                                </ul>
                            </li>*@
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Accounts", "List", "CheckingAccount")</li>
                    <li>@Html.Partial("_LoginPartial")</li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <!-- ======= Services Section ======= -->
    <section style="margin-top:15px;">
        <div class="container body-content">
            @RenderBody()

           
        </div>
       
    </section><!-- End Services Section -->

    <!-- ======= Footer ======= -->
    <footer>
        <div class="container d-md-flex py-4">

            <div class="me-md-auto text-center text-md-start">
                <div class="copyright">
                    <p>&copy; @DateTime.Now.Year - ATM</p>
                </div>
                <div class="credits">
                </div>
            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Vendor JS Files -->
    <script src="Content/vendor/aos/aos.js"></script>
    <script src="Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="Content/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="Content/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="Content/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="Content/vendor/waypoints/noframework.waypoints.js"></script>

    <script src="~/Scripts/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
